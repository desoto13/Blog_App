<div class="d-grid gap-3">
    <h1 class="display-5 text-center">This is your moment!</h1>
      <div class="card mx-auto" style="width: 50vw;">
        <h5 class="card-header"><%= @article.name %></h5>
          <div class="card-body">
            <p class="card-text"><%= @article.body %></p>
            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
              <%= link_to "Home", root_path, class:"btn btn-dark" %>
              <%= link_to "Edit", articles_edit_path(@article), class:"btn btn-warning" %>
              <%= link_to "Delete", articles_path + "/#{@article.id}",
              method: :delete,
              data: { confirm: "Are you sure?"}, class:"btn btn-danger" %>
            </div>
          </div>
    </div>
</div>