<div class="d-grid gap-4">
    <h1 class="display-5 text-center">Capturing your moments through words</h1>
    <%= link_to 'New moment', articles_new_path, class:"btn btn-success mx-auto", style:"width: 150px;" %>

    <% if @articles != [] %>
        <% @articles.sort_by { |p| p["updated_at"] }.reverse.each do |article| %>
            <div class="card mx-auto" style="width: 50vw;">
                <h5 class="card-header"><%= article.name %></h5>
                <div class="card-body">
                    <p class="card-text"><%= article.body %></p>
                    <%= link_to "View moment", articles_path + "/#{article.id}", class:"btn btn-primary" %>
                </div>
            </div>
        <% end %>
    <% end %>
</div>